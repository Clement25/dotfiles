[alias]
        ac = "!git add . ; git commit "
        a = add .
        ci = commit 
        co = checkout
        lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
        s = "!git status"
        d = diff
        cre = git config credential.helper store
        p = "!git rev-parse --abbrev-ref HEAD | xargs git push origin"
        unstage = reset --mixed HEAD .
        uncommit = reset --soft HEAD^
        f = "!git ls-files | grep -i"
        alias = "!git config -l | grep alias | cut -c 7-"
        amend = commit --amend
        rmc = rm --cached 
        addt = !sh -c 'git ls-files | grep \"\\.$1*\" | xargs git add' - 
        change = "!change() { git diff --name-status \"$1^\" \"$1\"; }; change"


[push]
        default = simple
[core]
        editor = vim
        excludesfile = /home/pengfei/.gitignore_global

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto


[credential]
        helper = cache --timeout=3600000000000000000000
