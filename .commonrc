# vman page for vim superman
# export PATH="$PATH:$HOME/.vim/bundle/vim-superman/bin"
# complete -o default -o nospace -F _man vman
# you can use vman for better man page

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('${HOME}/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "${HOME}/miniconda3/etc/profile.d/conda.sh" ]; then
        . "${HOME}/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="${HOME}/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<


# neovim settings
if [ -f $HOME/nvim.appimage ]; then
        alias 'vi'='./nvim.appimage'
fi

if [ -f $HOME/squashfs-root/AppRun ]; then
        alias 'vi'='~/squashfs-root/AppRun'
fi


# autojump
[[ -s $HOME/.autojump/etc/profile.d/autojump.sh ]] && source $HOME/.autojump/etc/profile.d/autojump.sh


# set vim as the common editor
export VISUAL=vim
export EDITOR="$VISUAL"

# append history command instead of overwriting it
shopt -s histappend

if [ -f ~/.localrc ]; then
    . ~/.localrc
fi


# source ~/.inputrc
bind -f ~/.inputrc


# daily commands
alias '..'='cd ..'
alias '...'='cd ../..'
alias '....'='cd ../../..'
alias 'cl'='clear'
alias 'brc'='source ~/.bashrc'
alias 'zrc'='source ~/.zshrc'
alias 'bpf'='source ~/.bash_profile'
alias 'ci'='conda install'
alias 'ca'='conda activate'
alias 'lsconda'='conda info --envs'
alias 'dotfiles'='cd ~/Github/.dotfiles'
alias 't'='ctags -R .'
alias 'rmr'='rm -r'
alias 'rmrf'='rm -rf'
alias 'cpr'='cp -r'
# port 8888
alias 'port'='lsof -n -i'
# check the user and command of the pid
# checkpid <pid>
alias 'checkpid'='ps -u -p'
# nbdime for merge
alias 'mergenb'='nbdime config-git --enable --global'

# shortcut for tmux
alias 'new'='tmux new-session -s '
alias 'tl'='tmux list-sessions'
alias 'switch'='tmux switch -t'
alias 'ta'='tmux a'

# shortcut for screen
alias 'sl'='screen -ls'
alias 'sr'='screen -r '

# pdbrc
alias 'pi'='pip install -r ~/Github/.dotfiles/requirements.txt'
alias 'pu'='pip uninstall -r ~/Github/.dotfiles/requirements.txt'


